---
import { default as Layout } from "../layouts/non-auth-layout.astro";
import TextOverImage from "../components/ui/text-over-image.astro";
---

<Layout title="大阪公立大学合氣道部 - ホーム">
    <div class="hero">
        <div class="hero-content">
            <TextOverImage
                image="/assets/images/78A41333-2C01-46AF-9417-AF191C90DA22.jpeg"
                ,
                alt="アバウトページへのリンク画像。袴を穿いた部員が合気道の技をかけている。"
                href="/about"
                filter="fade"
            >
                <h1 class="hero-title">大阪公立大学<br />合氣道部</h1>
                <h4 class="details-text">
                    画像をクリック <span class="arrow">→</span>
                </h4>
            </TextOverImage>
        </div>

        <section class="what-is-aikido-section">
            <a href="/about/what-is">
                <div class="wia-container">
                    <div class="what-is-aikido-link">
                        <h2 class="section-title">合氣道とは?</h2>
                        <p style="color:rgb(var(--overlay2)); font-size: 1rem;">
                            揺れているのが気になる人はクリック!
                        </p>
                    </div>

                    <div class="background"></div>
                </div>
            </a>
        </section>
    </div>

    <section class="links-section">
        <h2 class="section-title">サイト案内</h2>
        <div class="links-grid">
            <TextOverImage
                image="/assets/images/12CDEA0D-D193-4612-8409-DA5F09AF369F.jpeg"
                alt="稽古場所について紹介するページへのリンク画像"
                href="/access"
                filter="fade"
            >
                <h2>稽古場所</h2>
            </TextOverImage>
            <TextOverImage
                image="/assets/images/854691DD-9133-411B-92B1-898246981D1E.jpeg"
                alt="稽古予定について紹介するページへのリンク画像"
                href="/schedule"
                filter="fade"
            >
                <h2>稽古予定</h2>
            </TextOverImage>
            <TextOverImage
                image="/assets/images/B92DA480-D961-4060-913B-63634CDB05A6.jpeg"
                alt="リンク一覧を表示するページへの画像"
                href="/about/links"
                filter="fade"
            >
                <h2>リンク集</h2>
            </TextOverImage>
        </div>
    </section>
    <section class="contact-section">
        <a href="/contact" class="contact-button">お問い合わせ</a>
    </section>
</Layout>

<style>
    section {
        margin-top: 2rem;
    }
    .hero-content {
        max-width: 1000px;
        margin: 0 auto;
    }

    .hero-link {
        text-decoration: none;
        display: block;
        transition: transform 0.3s ease;
    }

    .details-text {
        opacity: 0;
    }

    @media (hover: hover) {
        .hero-content:hover .details-text {
            opacity: 1;
            transition: opacity 0.3s ease;
        }
    }

    @media (hover: none) {
        .details-text {
            opacity: 1;
        }
    }
    .hero-link:hover {
        transform: scale(1.02);
    }

    .hero-title {
        color: rgb(var(--text));
        font-size: 3rem;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    @media (max-width: 815px) {
        .hero-title {
            font-size: 1.8rem;
        }
        .details-text {
            font-size: 0.8rem;
        }
    }

    .hero-image {
        width: 100%;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    @media (max-width: 815px) {
        .hero-title {
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }
    }

    .what-is-aikido-link {
        text-decoration: none;
        display: block;
        transition:
            transform 0.3s ease,
            color 0.3s ease;
        font-weight: bold;
        font-size: 1.8rem;
        animation: shake 0.5s;
        animation-iteration-count: infinite;
    }

    .wia-container {
        cursor: pointer;
    }

    .wia-container:hover {
        transform: scale(1.1);
        color: rgb(var(--yellow));
    }

    @keyframes shake {
        0% {
            transform: translate(1px, 1px) rotate(0deg);
        }
        10% {
            transform: translate(-1px, -2px) rotate(-1deg);
        }
        20% {
            transform: translate(-3px, 0px) rotate(1deg);
        }
        30% {
            transform: translate(3px, 2px) rotate(0deg);
        }
        40% {
            transform: translate(1px, -1px) rotate(1deg);
        }
        50% {
            transform: translate(-1px, 2px) rotate(-1deg);
        }
        60% {
            transform: translate(-3px, 1px) rotate(0deg);
        }
    }

    .section-title {
        color: rgb(var(--subtext0));
        font-size: 2rem;
        text-align: center;
        margin-bottom: 2rem;
    }

    @media (max-width: 815px) {
        .section-title {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
        }
    }

    .links-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        max-width: 1000px;
        margin: 0 auto;
    }

    @media (max-width: 815px) {
        .links-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
    }

    .links-item {
        background-color: rgb(var(--surface0));
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

    .links-item:hover {
        transform: translateY(-4px);
    }

    .links-image {
        width: 100%;
        height: 100%;
    }

    .contact-section {
        padding: 4rem 2rem;
        text-align: center;
    }

    @media (max-width: 815px) {
        .contact-section {
            padding: 2rem 1rem;
        }
    }

    .contact-button {
        display: inline-block;
        padding: 1rem 2rem;
        background-color: rgb(var(--blue) / 0.5);
        color: rgb(var(--text));
        text-decoration: none;
        border-radius: 8px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

    @media (max-width: 815px) {
        .contact-button {
            padding: 0.8rem 1.5rem;
            font-size: 0.9rem;
        }
    }

    .contact-button:hover {
        background-color: rgb(var(--sapphire) / 0.5);
    }

    .wia-container {
        background: linear-gradient(
                to right,
                rgb(var(--surface0) / 0.7),
                rgb(var(--surface1) / 0.7)
            )
            0% center/200%;
        animation: box_color 7s linear infinite;
        padding: 20px;
        text-align: center;
        border-radius: 8px;
        transition: transform 0.3s ease;
        position: relative;
        z-index: 1;
        max-width: 25rem;
        margin: 0 auto;
    }
    .background {
        border: 1.4px solid transparent;
        border-radius: 8px;
        background: linear-gradient(
                48deg,
                rgb(var(--sapphire)),
                rgb(var(--mauve)),
                rgb(var(--sapphire))
            )
            0% center/300%;
        animation: box_color 9s linear infinite;
        animation: rolate 3s linear infinite;
        -webkit-mask:
            linear-gradient(#fff 0 0) padding-box,
            linear-gradient(#fff 0 0) border-box;
        -webkit-mask-composite: destination-out;
        mask:
            linear-gradient(#fff 0 0) padding-box,
            linear-gradient(#fff 0 0) border-box;
        mask-composite: exclude;
        overflow: visible;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 0;
    }
    @keyframes rolate {
        0% {
            background-position-x: 200%;
        }
        100% {
            background-position-x: 0%;
        }
    }
</style>
